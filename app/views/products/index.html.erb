<h1>Products index</h1>

<table class="table">
  <tr>
    <td>品名</td>
    <td>敘述</td>
    <td>單位</td>
    <td>價格(台幣)</td>
  </tr>
  
  <% @products.each do |p|%>
    <tr>
      <td> <%=p.name%></td>
      <td> <%=p.description%></td>
      <td> <%=p.unit%></td>
      <td> <%=p.price%></td>
    </tr>
  <%end%>
</table>